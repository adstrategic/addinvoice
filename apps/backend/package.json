{
  "name": "@addinvoice/backend",
  "version": "1.0.0",
  "type": "commonjs",
  "main": "dist/server.js",
  "files": ["dist"],
  "exports": {
    ".": "./dist/server.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "pnpm run clean && tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'tsx' src/server.ts",
    "start:worker": "node dist/worker.js",
    "dev:worker": "tsx src/worker.ts",
    "test": "vitest run",
    "test:unit": "vitest run unit",
    "test:integration": "NODE_ENV=TEST vitest run integration",
    "test:integration:prepare": "dotenv -e .env.test -v NODE_ENV=TEST -- pnpm --filter @addinvoice/db run db:deploy"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@addinvoice/db": "workspace:*",
    "@addinvoice/schemas": "workspace:*",
    "@clerk/express": "^1.7.46",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.0.0",
    "bullmq": "^5.69.1",
    "cloudinary": "^2.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "dotenv-cli": "^11.0.0",
    "express": "4.21.2",
    "express-rate-limit": "^8.2.1",
    "global": "^4.4.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.9.3",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "livekit-server-sdk": "^2.15.0",
    "multer": "^2.0.2",
    "resend": "^6.9.2",
    "stripe": "^17.4.0",
    "svix": "^1.84.1",
    "zod": "^3.25.67",
    "zod-express-middleware": "^1.4.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-rate-limit": "^6.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.0",
    "@types/supertest": "^6.0.3",
    "nodemon": "^3.1.11",
    "prisma": "^7.0.0",
    "supertest": "^7.2.2",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "vitest": "^4.0.18",
    "vitest-mock-extended": "^1.3.1"
  }
}
