{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm install --frozen-lockfile && pnpm turbo build --filter=@addinvoice/backend"
  },
  "deploy": {
    "startCommand": "node apps/backend/dist/run-cron.js",
    "cronSchedule": "0 0 * * *",
    "restartPolicyType": "NEVER"
  }
}
