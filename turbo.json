{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["DATABASE_URL"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true,
      "env": [
        "PORT",
        "FRONTEND_URL",
        "DATABASE_URL_TEST",
        "RESEND_API_KEY",
        "STRIPE_*",
        "CLERK_*",
        "CLOUDINARY_*",
        "LIVEKIT_*",
        "PDF_SERVICE_*",
        "REDIS_*",
        "PUPPETEER_*"
      ]
    },
    "test": {
      "outputs": [],
      "dependsOn": []
    },
    "lint": {
      "outputs": []
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:deploy": {
      "cache": false
    }
  }
}
